@model ICollection<asp.netDay2.Models.Instructor>
@* @{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_mylayout.cshtml";
} *@
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-M3PWQaY2QFIhwuzE7VW3K1dyA0C1coQemlJD1qDzWIxmg4zFMEu50eU/HiPzGmG4" crossorigin="anonymous">
</head>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                InsID
            </th>
            <th>
                Name
            </th>            
            <th>
                InsDegree
            </th>
            <th>
                Dep_Id
            </th>
            <th>
                Salary
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>
                    @instructor.InsId
                </td>
                <td>
                    @instructor.InsName
                </td>
                <td>
                    @instructor.InsDegree
                </td>
                <td>
                    @instructor.DeptId
                </td>
                <td>
                    @instructor.Salary
                </td>
                <td>
                    <form asp-controller="instructor" asp-action="details" asp-route-id="@instructor.InsId" method="post">
                        <button  class="btn btn-info">details</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="instructor" asp-action="edit" asp-route-id="@instructor.InsId" method="get">
                        <button  class="btn btn-primary">Edit</button>
                    </form>
                </td>              
                <td>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"
                            data-instructor-id="@instructor.InsId">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirm Deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this instructor?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <form id="deleteForm" asp-controller="Instructor" asp-action="Delete" method="post">
                                        <!-- Hidden field to hold the instructor ID -->
                                        <input type="hidden" name="id" id="modalInstructorId">
                                        <button type="submit" class="btn btn-primary">Yes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>

                <script>
                    // JavaScript to set the instructor ID in the modal form when the delete button is clicked
                    document.addEventListener('DOMContentLoaded', function () {
                        var deleteButtons = document.querySelectorAll('[data-bs-toggle="modal"]');
                        deleteButtons.forEach(function (button) {
                            button.addEventListener('click', function () {
                                var instructorId = this.getAttribute('data-instructor-id');
                                document.getElementById('modalInstructorId').value = instructorId;
                            });
                        });
                    });
                </script>
                
            </tr>
        }
        
    </tbody>
    

</table>
<form action="/instructor/create" method="post">
    <button class="btn btn-outline-primary btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark">Create New Instructor</button>
</form>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgvVh5lB7Cji8gk54A1hohzTYfJr8Hd50Tvf6Ezri0fxYSl0pGr" crossorigin="anonymous"></script>