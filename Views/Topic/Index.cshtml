@model ICollection<asp.netDay2.Models.Topic>
@* @{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_mylayout.cshtml";
} *@
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-M3PWQaY2QFIhwuzE7VW3K1dyA0C1coQemlJD1qDzWIxmg4zFMEu50eU/HiPzGmG4" crossorigin="anonymous">
</head>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                TopicID
            </th>
            <th>
                TopicName
            </th>            
        </tr>

    </thead>
    <tbody>
        @foreach (var topic in Model)
        {
            <tr>
                <td>
                    @topic.TopId
                </td>
                <td>
                    @topic.TopName
                </td>               
                <td>
                    <form asp-controller="topic" asp-action="details" asp-route-id="@topic.TopId" method="post">
                        <button  class="btn btn-info">details</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="topic" asp-action="edit" asp-route-id="@topic.TopId" method="get">
                        <button  class="btn btn-primary">Edit</button>
                    </form>
                </td>                
            </tr>
        }

    </tbody>
   

</table>
<form action="/topic/create" method="post">
    <button  class="btn btn-outline-primary btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark">Create New Topic</button>
</form>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgvVh5lB7Cji8gk54A1hohzTYfJr8Hd50Tvf6Ezri0fxYSl0pGr" crossorigin="anonymous"></script>